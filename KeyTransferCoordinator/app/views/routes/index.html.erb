<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>One leg</th>
      <th>Two leg1</th>
      <th>Two leg2</th>
      <th>Three leg1</th>
      <th>Three leg2</th>
      <th>Three leg3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.one_leg %></td>
        <td><%= route.two_leg1 %></td>
        <td><%= route.two_leg2 %></td>
        <td><%= route.three_leg1 %></td>
        <td><%= route.three_leg2 %></td>
        <td><%= route.three_leg3 %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


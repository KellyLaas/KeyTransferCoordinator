<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<%= link_to 'New Trip', new_trip_path %>
<%= link_to 'Search For a Path', search_path %>

<br>
<br>
<table>
  <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Ign</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% form_with(model: @trip, local:true) do |form| %>
      <div class="field">
        <%= form.label :origin %>
        <%= form.text_field :origin, id: :origin %>
        <%= form.label :destination %>
        <%= form.text_field :destination, id: :destination %>
      <div class="actions">
        <%= form.submit %>
    <% end %>

    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.origin %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.IGN %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
